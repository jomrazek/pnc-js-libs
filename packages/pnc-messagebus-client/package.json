{
  "name": "@project-ncl/pnc-messagebus-client",
  "version": "2.0.0",
  "description": "Client library for consuming PNC WebSocket notifications",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/project-ncl/pnc-js-libs.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "source": "src/index.ts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist/",
    "nuke": "npm run clean && rm -rf node_modules",
    "lint": "tslint -c ../../tslint.json 'src/**/*.ts'",
    "lint:fix": "tslint -c ../../tslint.json 'src/**/*.ts' --fix",
    "test": "jest",
    "pretest": "npm run lint",
    "compile": "tsc",
    "prebuild": "npm run clean && npm run test",
    "build": "npm run compile"
  },
  "keywords": [
    "PNC",
    "WebSocket",
    "Notification",
    "MessageBus"
  ],
  "author": "Alex Creasy <acreasy@redhat.com>",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/ws": "^6.0.4",
    "jest": "^24.9.0",
    "jest-websocket-mock": "^1.5.1",
    "mock-socket": "^8.0.5",
    "npm-run-all": "^4.1.5",
    "replace": "^1.2.0",
    "ts-jest": "^24.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@project-ncl/pnc-dto-types": "^2.0.0"
  }
}
